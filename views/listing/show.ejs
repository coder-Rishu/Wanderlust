<% layout('/layout/boilerplate.ejs') -%>
<button class="btn btn-dark back-btn mt-2">
    <a href="/listings" style="text-decoration: none; color: white;">Back</a>
</button>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h2><b><%= listing.title %></b></h2>
        <div class="card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">Owned by <i><%= listing.owner.username %></i></p> <br>
                <p class="card-text"><%= listing.description %></p> <br>
                <p class="card-text"><b>&#8377;</b> <%= listing.price.toLocaleString("en-IN") %>/night </p> <br>
                <p class="card-text"><%= listing.location %></p> <br>
                <p class="card-text"><%= listing.country %></p> <br>
            </div>
        </div>
        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="btns">
                <button class="btn btn-dark edit-btn" ><a href="/listings/<%= listing._id %>/edit" style="color: white; text-decoration: none;">Edit</a></button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
        <% } %>
        
        <div>
            <% if (currUser) { %>
                <hr>
                <h3><b></b>Leave a Reviews</b></h3>
                <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
                    <h5><label for="rating" class="form-label">Rating:</label></h5>
                    <div class="mb-3 mt-3">
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comment:</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please add a comment for review</div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-outline-dark">Submit</button>
                    </div>
                </form>
            <% } %>
            <hr>
            <h3><b>All Reviews</b></h3>
            <div class="row">
                <% for(review of listing.reviews) { %>
                <div class="card-review col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><b>@<%= review.author.username %></b></h5><br>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                        <% if (currUser && currUser._id.equals(review.author._id)) { %>
                            <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>